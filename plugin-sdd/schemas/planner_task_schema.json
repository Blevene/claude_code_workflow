{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/sdd-planner-output.json",
  "title": "SDDPlannerOutput",
  "type": "object",
  "required": [
    "tasks",
    "meta"
  ],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "owner_agent",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "owner_agent": {
            "type": "string",
            "enum": [
              "pm",
              "planner",
              "ui",
              "ux",
              "architect",
              "frontend",
              "backend",
              "integration",
              "spec-writer",
              "devops",
              "overseer"
            ]
          },
          "collaborators": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "todo",
              "in_progress",
              "blocked",
              "done"
            ]
          },
          "related_stories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "plan_version",
        "summary"
      ],
      "properties": {
        "plan_version": {
          "type": "integer",
          "minimum": 1
        },
        "summary": {
          "type": "string"
        },
        "open_questions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
