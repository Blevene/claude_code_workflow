{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/traceability-matrix.json",
  "title": "TraceabilityMatrix",
  "type": "object",
  "required": [
    "requirements"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "ears"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "story_id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "functional",
              "non-functional",
              "constraint"
            ],
            "default": "functional"
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "proposed",
              "in_progress",
              "implemented",
              "tested",
              "deprecated"
            ],
            "default": "proposed"
          },
          "ears": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ux_artifacts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "arch_artifacts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "code": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tests": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}